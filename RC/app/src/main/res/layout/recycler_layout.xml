<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="#EAA9A9"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:srcCompat="@tools:sample/avatars" />
            <TextView
                android:id="@+id/nameText"
                android:layout_width="70dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Name"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/ageText"
                android:layout_width="70dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/nameText"
                android:text="Age"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/degreeText"
                android:layout_width="70dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/ageText"
                android:text="Degree"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/stdName"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/nameText"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/stdAge"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/nameText"
                app:layout_constraintTop_toBottomOf="@+id/stdName"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/stdDegree"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@+id/degreeText"
                app:layout_constraintTop_toBottomOf="@+id/stdAge"
                android:textColor="#000"
                android:textStyle="bold">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>